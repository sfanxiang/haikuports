SUMMARY="Provides a way to load and enumerate PKCS#11 modules"
DESCRIPTION="p11-kit provides a way to load and enumerate PKCS#11 modules. \
Provides a standard configuration setup for installing PKCS#11 modules \
in such a way that they're discoverable."
HOMEPAGE="https://p11-glue.freedesktop.org/p11-kit.html"
COPYRIGHT="2017 Red Hat, Inc."
LICENSE="BSD (3-clause)"
REVISION="1"
SOURCE_URI="https://github.com/p11-glue/p11-kit/releases/download/0.23.9/p11-kit-0.23.9.tar.gz"
CHECKSUM_SHA256="e1c1649c335107a8d33cf3762eb7f57b2d0681f0c7d8353627293a58d6b4db63"
SOURCE_DIR="p11-kit-$portVersion"

PATCHES="
	p11_kit-$portVersion.patchset
	"

ARCHITECTURES="?x86_gcc2 ?x86 x86_64"

PROVIDES="
	p11_kit = $portVersion
	cmd:p11_kit = $portVersion
	cmd:trust = $portVersion
	lib:libp11_kit = $portVersion
	lib:p11_kit_proxy = $portVersion
	"

REQUIRES="
	haiku
	ca_root_certificates
	lib:libtasn1
	lib:libffi
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libtasn1
	devel:libffi
	"

BUILD_PREREQUIRES="
	cmd:aclocal
	cmd:autoconf
	cmd:autom4te
	cmd:automake
	cmd:autoreconf
	cmd:awk
	cmd:find
	cmd:gcc
	cmd:grep
	cmd:ld
	cmd:make
	cmd:makeinfo
	cmd:pkg_config
	cmd:sed
	"

USER_SETTINGS_FILES="
	settings/pkcs11 directory
	"

GLOBAL_WRITABLE_FILES="
	settings/pkcs11 directory keep-old
	"

BUILD()
{
	runConfigure ./configure \
		LDFLAGS="-lnetwork" \
		--with-trust-paths="${dataRootDir}/ssl/CARootCertificates.pem" \
		--with-user-config="~/config/settings/pkcs11"
	make $jobArgs
}

INSTALL()
{
	make install

	# clean up
	rm ${libDir}/*.la
	rm ${libDir}/pkcs11/*.la

	# put pkgconfig into the right location
	mkdir -p ${developLibDir}
	mv ${libDir}/pkgconfig ${developLibDir}
}
